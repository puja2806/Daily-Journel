<!DOCTYPE html>
<html lang="en">
<%- include ('head.ejs') %>
<body>
    <%- include('header.ejs') %>

    <div class= "paragraph">
        <div class = "delete-item">
            <h1><%= blogs1.title %></h1>
            <a class="delete" data-doc="<%= blogs1._id %>">Delete</a>
        </div>
        
        <p><%= blogs1.post %></p>
    </div>



    <%- include('footer.ejs') %>

    <script>
        const trash = document.querySelector('.delete');
        trash.addEventListener('click', (e) => {
            const endpoint = `/post/${trash.dataset.doc}`;
            fetch(endpoint, {method: 'DELETE'}).then((response) => response.json()).then((data) => window.location.href = data.redirect).catch((err) => console.log(err));
        });
    </script>
</body>
</html>